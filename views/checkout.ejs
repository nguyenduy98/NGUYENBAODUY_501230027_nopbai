<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>
    <div class="container py-4">
      <div class="row g-4">
        <!-- Cột trái: Thông tin giao hàng -->
        <div class="col-lg-7">
          <h4 class="fw-bold mb-3">Thông tin giao hàng</h4>
          <form id="checkoutForm" action="/" method="POST" autocomplete="off">
                            <div class="mb-3">
                                <input type="text" class="form-control" name="fullName" placeholder="Họ và tên" required>
                            </div>
            <div class="mb-3">
              <input type="tel" class="form-control" name="phone" id="phoneInput" placeholder="Số điện thoại" required>
              <div class="form-text text-danger d-none" id="phoneError">Số điện thoại không hợp lệ (8-15 ký tự, không chứa ký tự đặc biệt và khoảng trắng)</div>
                                </div>
            <div class="mb-3">
                                    <input type="email" class="form-control" name="email" placeholder="Email" required>
                                </div>
            <div class="mb-3">
              <input type="text" class="form-control" name="address" placeholder="Địa chỉ" required>
                            </div>
            <div class="row g-2 mb-3">
              <div class="col-md-4">
                                    <select class="form-select" name="province" id="province" required>
                  <option value="">Chọn tỉnh / thành</option>
                                    </select>
                                </div>
              <div class="col-md-4">
                                    <select class="form-select" name="district" id="district" required>
                  <option value="">Chọn quận / huyện</option>
                </select>
              </div>
              <div class="col-md-4">
                <select class="form-select" name="ward" id="ward" required>
                  <option value="">Chọn phường / xã</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-3">
              <textarea class="form-control" name="note" rows="2" placeholder="Ghi chú đơn hàng (không bắt buộc)"></textarea>
                            </div>
                            <div class="mb-3">
              <label class="form-label fw-bold">Phương thức vận chuyển</label>
              <div class="bg-light rounded p-3">
                <div>Vui lòng chọn tỉnh/thành để có danh sách phương thức vận chuyển.</div>
              </div>
                            </div>
                            <div class="mb-3">
              <label class="form-label fw-bold">Phương thức thanh toán</label>
              <div class="bg-light rounded p-3">
                <div class="form-check mb-2">
                  <input class="form-check-input" type="radio" name="payment" id="cod" value="cod" checked>
                  <label class="form-check-label" for="cod">Thanh toán khi giao hàng (COD)</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="payment" id="bank" value="bank">
                  <label class="form-check-label" for="bank">Chuyển khoản qua ngân hàng</label>
                            </div>
                        </div>
                    </div>
            <input type="hidden" id="provinceNameHidden" name="provinceName">
            <input type="hidden" id="districtNameHidden" name="districtName">
            <input type="hidden" id="wardNameHidden" name="wardName">
            <input type="hidden" id="appliedCouponHidden" name="appliedCoupon">
            <input type="hidden" id="shippingFeeHidden" name="shippingFee">
            <input type="hidden" id="subtotalHidden" name="subtotal">
            <input type="hidden" id="finalTotalHidden" name="finalTotal">
            <button type="submit" class="btn btn-primary w-100 fw-bold py-2">Hoàn tất đơn hàng</button>
          </form>
                        </div>
        <!-- Cột phải: Tóm tắt đơn hàng -->
        <div class="col-lg-5">
          <div class="bg-white rounded shadow-sm p-4 mb-3">
            <div class="fw-bold mb-3">Giỏ hàng</div>
                            <% if (products && products.length > 0) { %>
                                    <% products.forEach(product => { %>
                <div class="d-flex align-items-center mb-2">
                  <img src="<%= product.imgUrl || '/images/default-product.jpg' %>" alt="<%= product.title %>" class="rounded me-2" style="width:48px;height:48px;object-fit:cover;">
                  <div class="flex-grow-1">
                    <div><%= product.title %></div>
                    <div class="text-muted" style="font-size:13px;">x<%= product.qty %></div>
                                                    </div>
                  <div class="fw-bold" style="color:#ff4444"><%= Number(product.price).toLocaleString('vi-VN') %>₫</div>
                                        </div>
                                    <% }); %>
              <hr>
              <!-- Mã giảm giá -->
              <div class="mb-2">
                <label class="form-label fw-bold">Mã giảm giá</label>
                <div class="mb-2">
                  <button type="button" class="btn btn-outline-primary w-100" id="selectVoucherBtn">
                    <i class="fas fa-ticket-alt me-2"></i>Chọn Voucher
                  </button>
                </div>
                <div id="selectedVoucher" class="mb-2" style="display:none;">
                  <div class="alert alert-success py-2 mb-1">
                    <div class="d-flex justify-content-between align-items-center">
                      <div>
                        <strong id="selectedVoucherCode"></strong>
                        <div class="text-muted" style="font-size:12px;" id="selectedVoucherDesc"></div>
                      </div>
                      <button type="button" class="btn btn-sm btn-outline-danger" id="removeVoucherBtn">
                        <i class="fas fa-times"></i>
                      </button>
                    </div>
                  </div>
                </div>
                <div id="couponMessage" class="text-danger mb-1" style="font-size:14px;"></div>
                <div id="discountRow" class="d-flex justify-content-between mb-1" style="display:none;">
                  <div class="text-success">Đã giảm giá</div>
                  <div class="text-success" id="discountAmount">-0₫</div>
                </div>
              </div>
              <div class="d-flex justify-content-between mb-2">
                <div class="text-muted">Tạm tính</div>
                <div id="subtotal"><%= totalPrice.toLocaleString('vi-VN') %>₫</div>
              </div>
              <div class="d-flex justify-content-between mb-2">
                <div class="text-muted">Phí vận chuyển</div>
                <div id="shippingFee">-</div>
              </div>
              <div class="d-flex justify-content-between mb-2">
                <div class="fw-bold">Tổng cộng</div>
                <div class="fw-bold" id="grandTotal" style="color:#ff4444"><%= totalPrice.toLocaleString('vi-VN') %>₫</div>
              </div>
              <!-- QR chuyển khoản VietQR -->
              <div class="text-center mt-4" id="vietqr-box" style="display:none;">
                <img id="vietqr-img"
                  src="https://img.vietqr.io/image/970415-113366668888-compact2.png?amount=<%= totalPrice %>&addInfo=DH"
                  alt="Quét mã VietQR để thanh toán" style="width:220px;max-width:100%;border:1.5px solid #eee;border-radius:12px;">
                <div style="margin-top:8px;font-weight:600;">
                  STK: 113366668888<br>
                  Ngân hàng: VietinBank<br>
                  Số tiền: <span id="qr-amount"><%= totalPrice %></span> VNĐ
                </div>
                <div style="color:#888;font-size:0.95em;">
                  Nội dung chuyển khoản: <span id="qr-note">DH</span>
                </div>
                <div class="text-danger mt-2" style="font-size:0.95em;">Vui lòng chuyển khoản đúng số tiền và nội dung để hệ thống xác nhận tự động!</div>
              </div>
                            <% } else { %>
              <div class="text-center text-muted">Không có sản phẩm trong giỏ hàng</div>
                            <% } %>
                        </div>
            </div>
        </div>
    </div>

    <!-- Modal Chọn Voucher -->
    <div class="modal fade" id="voucherModal" tabindex="-1">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">
              <i class="fas fa-ticket-alt me-2"></i>Chọn Voucher
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <!-- Phần nhập mã voucher -->
            <div class="mb-4">
              <label class="form-label fw-bold">Mã Voucher</label>
              <div class="input-group">
                <input type="text" id="voucherCodeInput" class="form-control" placeholder="Nhập mã voucher">
                <button class="btn btn-outline-secondary" type="button" id="applyVoucherCodeBtn">ÁP DỤNG</button>
              </div>
            </div>

            <!-- Phần danh sách voucher -->
            <div class="mb-3">
              <h6 class="fw-bold mb-3">Mã Giảm Giá Khả Dụng</h6>
              <div id="voucherList">
                <!-- Vouchers sẽ được load bằng JavaScript -->
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">TRỞ LẠI</button>
            <button type="button" class="btn btn-primary" id="confirmVoucherBtn">OK</button>
          </div>
        </div>
      </div>
    </div>

    <script>
    // Validate số điện thoại
    document.getElementById('phoneInput').addEventListener('input', function() {
      const val = this.value.trim();
      const valid = /^[0-9]{8,15}$/.test(val);
      document.getElementById('phoneError').classList.toggle('d-none', valid);
      this.classList.toggle('is-invalid', !valid);
    });
    // Load tỉnh/thành, quận/huyện, phường/xã
        // Biến lưu dữ liệu địa chỉ
        let selectedProvinceName = '';
        let selectedDistrictName = '';
        let selectedWardName = '';

    // Hàm load dữ liệu tỉnh/thành phố (chỉ cho phép TPHCM)
        function loadProvinces() {
                    const select = document.getElementById('province');
      // Chỉ thêm TP Hồ Chí Minh
                        const option = document.createElement('option');
      option.value = '79|TP Hồ Chí Minh';
      option.textContent = 'TP Hồ Chí Minh';
                        select.appendChild(option);
        }

    // Hàm load dữ liệu quận/huyện (giữ nguyên)
        function loadDistricts(provinceValue) {
            const [provinceCode, provinceName] = provinceValue.split('|');
            selectedProvinceName = provinceName;
            document.getElementById('provinceNameHidden').value = provinceName;
            fetch(`https://provinces.open-api.vn/api/p/${provinceCode}?depth=2`)
                .then(response => response.json())
                .then(data => {
                    const select = document.getElementById('district');
                    select.innerHTML = '<option value="">Chọn Quận/Huyện</option>';
                    data.districts.forEach(district => {
                        const option = document.createElement('option');
                        option.value = district.code + '|' + district.name;
                        option.textContent = district.name;
                        select.appendChild(option);
                    });
                });
        }

    // Hàm load dữ liệu phường/xã (giữ nguyên)
        function loadWards(districtValue) {
            const [districtCode, districtName] = districtValue.split('|');
            selectedDistrictName = districtName;
            document.getElementById('districtNameHidden').value = districtName;
            fetch(`https://provinces.open-api.vn/api/d/${districtCode}?depth=2`)
                .then(response => response.json())
                .then(data => {
                    const select = document.getElementById('ward');
                    select.innerHTML = '<option value="">Chọn Phường/Xã</option>';
                    data.wards.forEach(ward => {
                        const option = document.createElement('option');
                        option.value = ward.code + '|' + ward.name;
                        option.textContent = ward.name;
                        select.appendChild(option);
                    });
                });
        }

    // Cập nhật tên phường/xã (giữ nguyên)
        function updateWardName(wardValue) {
            const [wardCode, wardName] = wardValue.split('|');
            window.selectedWardName = wardName;
            document.getElementById('wardNameHidden').value = wardName;
        }

        // Event listeners
        document.getElementById('province').addEventListener('change', function() {
            loadDistricts(this.value);
        });
        document.getElementById('district').addEventListener('change', function() {
            loadWards(this.value);
        });
        document.getElementById('ward').addEventListener('change', function() {
            updateWardName(this.value);
      // Tính phí ship khi chọn phường
      updateShippingFee();
        });
        // Load dữ liệu tỉnh/thành phố khi trang được load
        document.addEventListener('DOMContentLoaded', loadProvinces);
    // Tính phí ship động chỉ cho TPHCM
    var totalPrice = <%= totalPrice ? totalPrice : 0 %>;
    
    // Khai báo biến global để các hàm có thể truy cập
    window.selectedWardName = '';
    
    function calculateShippingFee() {
      console.log('calculateShippingFee() - selectedWardName:', window.selectedWardName, 'totalPrice:', totalPrice);
      
      // Chỉ ship TPHCM, nếu chưa chọn phường thì hiển thị "-"
      if (!window.selectedWardName) {
        console.log('calculateShippingFee() - Chưa chọn phường, trả về null');
        return null;
      }
      
      if (totalPrice >= 300000) {
        console.log('calculateShippingFee() - Tổng >= 300k, miễn phí');
        return 0;
      }
      
      console.log('calculateShippingFee() - Tổng < 300k, phí 20k');
      return 20000; // phí cố định nếu < 300k
    }
    
    function updateShippingFee() {
      // Tính lại tổng sau giảm giá
      let afterDiscount = totalPrice - (discountAmount || 0);
      if (afterDiscount < 0) afterDiscount = 0;
      
      // Debug log
      console.log('updateShippingFee() - totalPrice:', totalPrice, 'selectedWardName:', window.selectedWardName);
      
      // Cập nhật subtotal display
      const subtotalEl = document.getElementById('subtotal');
      if (subtotalEl) {
        subtotalEl.textContent = afterDiscount.toLocaleString('vi-VN') + '₫';
      }
      
      let fee = 0;
      const baseFee = calculateShippingFee();
      console.log('updateShippingFee() - baseFee:', baseFee);
      
      if (baseFee === null) {
        // Chưa chọn phường/xã
        document.getElementById('shippingFee').textContent = '-';
        console.log('updateShippingFee() - Hiển thị "-" vì chưa chọn phường');
      } else if (window.freeship && window.freeship > 0) {
        // Có mã freeship
        fee = Math.max(baseFee - window.freeship, 0);
        document.getElementById('shippingFee').textContent = fee === 0 ? 'Miễn phí' : fee.toLocaleString('vi-VN') + '₫';
        console.log('updateShippingFee() - Có freeship, fee:', fee);
      } else {
        // Không có mã freeship, chỉ miễn phí nếu tổng GỐC >= 300k
        if (totalPrice >= 300000) fee = 0;
        else fee = baseFee;
        document.getElementById('shippingFee').textContent = fee === 0 ? 'Miễn phí' : fee.toLocaleString('vi-VN') + '₫';
        console.log('updateShippingFee() - Không có freeship, fee:', fee, 'totalPrice >= 300k:', totalPrice >= 300000);
      }
      let grand = afterDiscount + fee;
      if (grand < 0) grand = 0;
      document.getElementById('grandTotal').textContent = grand.toLocaleString('vi-VN') + '₫';
      
      // Cập nhật các trường ẩn cho form
      const shippingFeeHidden = document.getElementById('shippingFeeHidden');
      const finalTotalHidden = document.getElementById('finalTotalHidden');
      if (shippingFeeHidden && finalTotalHidden) {
        shippingFeeHidden.value = fee;
        finalTotalHidden.value = grand;
      }
      
      // Cập nhật QR code
      if (typeof updateVietQR === 'function') {
        updateVietQR();
      }
    }
    </script>
    <script src="/js/voucher.js"></script>
    <script>
    // Global variables for voucher functionality
    // appliedCoupon đã được khai báo trong voucher.js, không cần khai báo lại
    let discountAmount = 0;
    // totalPrice đã được khai báo ở trên, không cần khai báo lại
    </script>
<% if (typeof orderSuccess !== 'undefined' && orderSuccess) { %>
  <div id="orderSuccessModal" class="modal fade show" tabindex="-1" style="display:block; background:rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header border-0">
          <h5 class="modal-title text-success"><i class="fas fa-check-circle me-2"></i>Đặt hàng thành công!</h5>
        </div>
        <div class="modal-body text-center">
          <p class="mb-2">Đơn hàng của bạn đã được đặt thành công.<br>Chúng tôi đã gửi email xác nhận đến địa chỉ email của bạn.</p>
          <div class="order-details p-3 mb-3 bg-light rounded">
            <div><strong>Mã đơn hàng:</strong> #<%= orderId %></div>
            <div><strong>Ngày đặt:</strong> <%= (new Date()).toLocaleDateString('vi-VN') %></div>
          </div>
          <div class="d-grid gap-2 d-md-flex justify-content-center">
            <a href="/orders/<%= orderId %>" class="btn btn-primary">
              <i class="fas fa-eye me-2"></i>Chi tiết đơn hàng
            </a>
            <a href="/orders/<%= orderId %>/invoice" class="btn btn-outline-primary">
              <i class="fas fa-file-invoice me-2"></i>Xem hóa đơn
            </a>
          </div>
        </div>
        <div class="modal-footer border-0 justify-content-center">
          <a href="/" class="btn btn-outline-secondary">Về trang chủ</a>
          <a href="/orders" class="btn btn-outline-secondary">Xem đơn hàng</a>
        </div>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener('click', function(e) {
      if (e.target.id === 'orderSuccessModal') {
        document.getElementById('orderSuccessModal').style.display = 'none';
      }
    });
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        document.getElementById('orderSuccessModal').style.display = 'none';
      }
    });
  </script>
<% } %>
<script>
document.getElementById('bank').addEventListener('change', function() {
  document.getElementById('vietqr-box').style.display = 'block';
});
document.getElementById('cod').addEventListener('change', function() {
  document.getElementById('vietqr-box').style.display = 'none';
});
if (document.getElementById('cod').checked) {
  document.getElementById('vietqr-box').style.display = 'none';
}
</script>
<script>
function updateVietQR() {
  var grand = document.getElementById('grandTotal').textContent.replace(/[^\d]/g, '');
  var info = 'DH';
  document.getElementById('vietqr-img').src =
    `https://img.vietqr.io/image/970415-113366668888-compact2.png?amount=${grand}&addInfo=${encodeURIComponent(info)}`;
  document.getElementById('qr-amount').textContent = Number(grand).toLocaleString('vi-VN');
}
// Khi trang load lần đầu cũng cập nhật QR và phí ship
updateVietQR();
updateShippingFee();
</script>
