<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('./includes/navigation.ejs') %>
        <%- include('./includes/category-navbar.ejs') %>

        <!-- Banner Slider -->
        <div class="d-flex justify-content-center" style="width:100%;">
          <div id="mainBannerCarousel" class="carousel slide" data-bs-ride="carousel" style="background:#ffe5d0; width:1200px; max-width:100%; border-radius:18px; overflow:hidden; margin:32px 0 0 0;">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/images/banner1.jpg" class="d-block w-100" alt="Banner 1" style="max-height:420px;object-fit:cover;">
              </div>
              <div class="carousel-item">
                <img src="/images/banner2.jpg" class="d-block w-100" alt="Banner 2" style="max-height:420px;object-fit:cover;">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#mainBannerCarousel" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#mainBannerCarousel" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>

        <!-- Section: Quà tặng trái cây -->
        <div class="product-list-section">
          <div class="text-center">
            <div class="product-list-title">Quà tặng trái cây</div>
          </div>
          <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-3 mt-3">
              <% for (let product of giftProducts) { %>
                <div class="col">
                  <div class="product-card product-link" data-href="/products/<%= product._id %>" style="cursor:pointer;">
                    <img src="<%= product.imgUrl || '/images/default-product.jpg' %>" alt="<%= product.title %>">
                    <div class="product-name"><%= product.title %></div>
                    <div class="product-code"><%= product.code || '' %></div>
                    <div class="product-price"><%= product.price ? Number(product.price).toLocaleString('vi-VN') : 0 %>₫</div>
                    <% if (product.stock === 0) { %>
                      <div class="product-badge">Tạm hết hàng</div>
                      <div class="product-badge" style="position:static;display:block;margin:0 auto 8px auto;background:#eee;color:#888;font-size:1rem;font-weight:600;border-radius:12px;padding:4px 0;max-width:90%">Tạm hết hàng</div>
                      <button class="btn-disabled" disabled>Tạm hết hàng</button>
                    <% } else { %>
                      <form action="/cart" method="POST" onclick="event.stopPropagation();">
                        <input type="hidden" name="productId" value="<%= product._id %>">
                        <button type="submit" class="btn-buy"><i class="fas fa-shopping-cart"></i> Chọn mua</button>
                      </form>
                    <% } %>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Section: Trái cây Việt Nam -->
        <div class="product-list-section mt-5">
          <div class="text-center">
            <div class="product-list-title">Trái cây Việt Nam</div>
          </div>
          <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-3 mt-3">
              <% for (let product of vietnamProducts) { %>
                <div class="col">
                  <div class="product-card product-link" data-href="/products/<%= product._id %>" style="cursor:pointer;">
                    <img src="<%= product.imgUrl || '/images/default-product.jpg' %>" alt="<%= product.title %>">
                    <div class="product-name"><%= product.title %></div>
                    <div class="product-code"><%= product.code || '' %></div>
                    <div class="product-price"><%= product.price ? Number(product.price).toLocaleString('vi-VN') : 0 %>₫</div>
                    <% if (product.stock === 0) { %>
                      <div class="product-badge">Tạm hết hàng</div>
                      <div class="product-badge" style="position:static;display:block;margin:0 auto 8px auto;background:#eee;color:#888;font-size:1rem;font-weight:600;border-radius:12px;padding:4px 0;max-width:90%">Tạm hết hàng</div>
                      <button class="btn-disabled" disabled>Tạm hết hàng</button>
                    <% } else { %>
                      <form action="/cart" method="POST" onclick="event.stopPropagation();">
                        <input type="hidden" name="productId" value="<%= product._id %>">
                        <button type="submit" class="btn-buy"><i class="fas fa-shopping-cart"></i> Chọn mua</button>
                      </form>
                    <% } %>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
        </div>
        <div class="text-center mt-2 mb-4">
          <a href="http://localhost:3000/collections/trai-cay-viet-nam" class="btn btn-outline-primary" style="font-weight:600;font-size:1.08rem;padding:8px 32px;border-radius:18px;">Xem thêm sản phẩm <span style="color:#ff8551;">trái cây Việt Nam</span></a>
        </div>

        <!-- Section: Trái cây nhập khẩu -->
        <div class="product-list-section mt-5">
          <div class="text-center">
            <div class="product-list-title">Trái cây nhập khẩu</div>
          </div>
          <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-3 mt-3">
              <% for (let product of importProducts) { %>
                <div class="col">
                  <div class="product-card product-link" data-href="/products/<%= product._id %>" style="cursor:pointer;">
                    <img src="<%= product.imgUrl || '/images/default-product.jpg' %>" alt="<%= product.title %>">
                    <div class="product-name"><%= product.title %></div>
                    <div class="product-code"><%= product.code || '' %></div>
                    <div class="product-price"><%= product.price ? Number(product.price).toLocaleString('vi-VN') : 0 %>₫</div>
                    <% if (product.stock === 0) { %>
                      <div class="product-badge">Tạm hết hàng</div>
                      <div class="product-badge" style="position:static;display:block;margin:0 auto 8px auto;background:#eee;color:#888;font-size:1rem;font-weight:600;border-radius:12px;padding:4px 0;max-width:90%">Tạm hết hàng</div>
                      <button class="btn-disabled" disabled>Tạm hết hàng</button>
                    <% } else { %>
                      <form action="/cart" method="POST" onclick="event.stopPropagation();">
                        <input type="hidden" name="productId" value="<%= product._id %>">
                        <button type="submit" class="btn-buy"><i class="fas fa-shopping-cart"></i> Chọn mua</button>
                      </form>
                    <% } %>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
        </div>

        <style>
            .hero-banner {
                background: linear-gradient(rgba(78, 115, 223, 0.8), rgba(78, 115, 223, 0.9)), url('/images/banner-bg.jpg');
                background-size: cover;
                background-position: center;
                min-height: 400px;
                position: relative;
                display: flex;
                align-items: center;
            }
            .banner-content {
                padding: 2rem 0;
                animation: fadeInUp 1s ease;
            }
            .feature-box {
                background-color: white;
                border-radius: 10px;
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
                transition: all 0.3s ease;
            }
            .feature-box:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
            }
            .section-header .divider {
                width: 80px;
                height: 3px;
                background-color: var(--primary-color);
                margin-bottom: 20px;
            }
            .product-overlay {
                position: absolute;
                top: 10px;
                right: 10px;
                opacity: 0;
                transition: all 0.3s ease;
            }
            .product-card:hover .product-overlay {
                opacity: 1;
            }
            .empty-state {
                padding: 3rem;
                background: white;
                border-radius: 10px;
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            }
            @keyframes fadeInUp {
                from {
                    opacity: 0;
                    transform: translateY(30px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }
        </style>

        <!-- Section: Tính năng nổi bật (ngay trên footer) -->
<div class="bg-white py-5">
  <div class="container">
    <div class="row g-4 justify-content-center">
      <div class="col-md-4">
        <div class="feature-box text-center p-4 shadow-sm" style="border-radius:18px;">
          <div class="feature-icon mb-3">
            <i class="fas fa-truck-fast fa-3x" style="color:#1877ff;"></i>
          </div>
          <h4>Giao Hàng Nhanh Chóng</h4>
          <p class="text-muted mb-0">Giao hàng trong vòng 24 giờ nội thành</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="feature-box text-center p-4 shadow-sm" style="border-radius:18px;">
          <div class="feature-icon mb-3">
            <i class="fas fa-credit-card fa-3x" style="color:#1877ff;"></i>
          </div>
          <h4>Thanh Toán An Toàn</h4>
          <p class="text-muted mb-0">Đa dạng phương thức thanh toán</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="feature-box text-center p-4 shadow-sm" style="border-radius:18px;">
          <div class="feature-icon mb-3">
            <i class="fas fa-headset fa-3x" style="color:#1877ff;"></i>
          </div>
          <h4>Hỗ Trợ 24/7</h4>
          <p class="text-muted mb-0">Luôn sẵn sàng hỗ trợ bạn mọi lúc</p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./includes/end.ejs') %>
<script>
  // Điều hướng khi nhấn vào card sản phẩm
  document.querySelectorAll('.product-link').forEach(card => {
    card.addEventListener('click', function() {
      window.location.href = card.getAttribute('data-href');
    });
  });
</script>