<%- include('includes/head.ejs') %>
</head>

<body>
    <%- include('includes/navigation.ejs') %>
    
    <div class="container py-5">
        <div class="row">
            <div class="col-md-6 mx-auto text-center">
                <div class="card shadow border-0">
                    <div class="card-body py-5">
                        <div class="mb-4">
                            <div class="d-flex justify-content-center">
                                <div style="width: 100px; height: 100px; background-color: #edf7ee; border-radius: 50%; display: flex; justify-content: center; align-items: center;">
                                    <i class="fas fa-check-circle text-success" style="font-size: 50px;"></i>
                                </div>
                            </div>
                        </div>
                        
                        <h2 class="mb-3 text-success">Đặt hàng thành công!</h2>
                        <p class="text-muted mb-4">
                            Đơn hàng của bạn đã được đặt thành công. 
                            Chúng tôi đã gửi email xác nhận đến địa chỉ email của bạn.
                        </p>
                        
                        <div class="order-details p-4 mb-4 bg-light rounded">
                            <h5>Thông tin đơn hàng</h5>
                            <p class="mb-1"><strong>Mã đơn hàng:</strong> #<%= orderId %></p>
                            <p class="mb-0"><strong>Ngày đặt:</strong> <%= new Date().toLocaleDateString('vi-VN') %></p>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-center">
                            <a href="/orders/<%= orderId %>" class="btn btn-primary">
                                <i class="fas fa-eye me-2"></i>Chi tiết đơn hàng
                            </a>
                            <a href="/orders/<%= orderId %>/invoice" class="btn btn-outline-primary">
                                <i class="fas fa-file-invoice me-2"></i>Xem hóa đơn
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="card shadow border-0 mt-4">
                    <div class="card-body">
                        <h5 class="mb-3">Bạn muốn làm gì tiếp theo?</h5>
                        <div class="d-grid gap-2 d-md-flex justify-content-center">
                            <a href="/" class="btn btn-outline-secondary">
                                <i class="fas fa-home me-2"></i>Về trang chủ
                            </a>
                            <a href="/orders" class="btn btn-outline-secondary">
                                <i class="fas fa-list-alt me-2"></i>Xem đơn hàng
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('includes/end.ejs') %> 